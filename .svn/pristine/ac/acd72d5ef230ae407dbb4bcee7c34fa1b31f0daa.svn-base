* {
    font-famiy: 'Lucida Grande',Tahoma !important;
}
.header_nav_container {
	margin: 0 auto;
    position: relative;
    width: 988px;
}
#main_header {
	margin: 0;
    padding: 10px 0 0;
    width: 988px;
	display: block;
}
.top_panel .logo {
    background: url("../img/logo_admin.jpg") no-repeat scroll 0 0 transparent;
    float: left;
    height: 37px;
    margin: 2px 0 0 17px;
    padding: 0;
    width: 125px;
}
.top_panel .logo a {
    display: block;
    height: 37px;
    width: 125px;
}
#menu_items {
    background: url("../img/nav_bg.jpg") repeat-x scroll 0 0 transparent;
    float: right;
    height: 39px;
    margin: 0;
    padding: 0;
    width: auto;
}
#menu_items > li {
    background: url("../img/nav_sep.jpg") no-repeat scroll left top transparent;
    float: left;
    height: 39px;
    list-style: none outside none;
    margin: 0;
    padding: 0;
    width: auto;
}
#menu_items > li:first-child {
    background: none repeat scroll 0 0 transparent;
}
#menu_items > li > a {
	color: #225478;
    display: block;
    font-family: Arial,Helvetica,sans-serif;
    font-size: 15px;
    font-weight: normal;
    height: 39px;
    line-height: 39px;
    margin: 0;
    padding: 0 16px 0 19px;
    text-decoration: none;
}
#menu_items li a.setting {
    background: url("../img/setting_icon.png") no-repeat scroll 0 0 transparent;
    height: 20px;
    margin: 10px 17px 0 20px;
    padding: 0;
    width: 20px;
}
#navgear li, #apps li {
	padding: 10px 12px
}
#navgear a, #apps a  {
	color: #4690c5;
    text-decoration: none;
	display: block;
}
#apps {
    position: relative;
}
#menu_items > li.active_menu > a {
    color: #46a3e0;
}
#menu_items li:hover a {
    color: #46A3E0;
    cursor: pointer;
}
#menu_items .logout a {
    color: #9ac5e5;
    font-weight: bold;
    font-size: 14px;
}
#menu_items .logout {
    float: right;
    margin-right: 0;
    text-align: right;
}
#logo {
    float:left;
    margin: 6px 20px -10px 14px;
    height: 35px;
}
#navgear {
    position:relative;
    cursor:pointer;
}
#navgear:hover {
    cursor:pointer;
}

#apps {
	position: relative;
}

#gear {
   padding: 10px 8px 3px;
   vertical-align: middle;
}
#menu_items li:hover, #menu_items li a:hover,#navgear:hover {
	-webkit-transition: all 0.25s ease-in-out;
	-moz-transition: all 0.25s ease-in-out;
	-o-transition: all 0.25s ease-in-out;
	-ms-transition: all 0.25s ease-in-out;
}
/* ***Style for sub menu********************/

#menu_items li ul {
	position:absolute;
	left:-11px;
	top:38px;
	visibility:hidden;
	z-index:10;
	margin:0;
	padding:0;
	background:#fff;
	width:153px;
    -moz-box-shadow:    inset 0 0 60px #e9f4fa;
    -webkit-box-shadow: inset 0 0 60px #e9f4fa;
    box-shadow:         inset 0 0 60px #e9f4fa;
	margin-left: 12px
}
#menu_items li .shadow
{
border:1px solid #83b4d7;
padding-bottom:10px;
-moz-box-shadow:    4px 4px 2px -1px #ccc;
    -webkit-box-shadow: 4px 4px 2px -1px #ccc;
     box-shadow:        4px 4px 2px -1px #ccc;
}
#menu_items li ul li {
	display:block;
	float:none;
	background:none;
}
#menu_items li ul li:hover {
    height:auto;
	display:block;
	float:none;
	background:none;
}

#menu_items li ul li a:link, .myMenu li ul li a:visited {
	
	width:auto;
}

#menu_items li ul li a:hover {
	color:#225a79;	
}
/********style for submenu **************/