/* visibility selection modal */
.the_visibility_modal {
	width: 310px;
	font-size: 14px;
	background-color: #e1eef8;
	border-radius: 2px;
	border: 1px solid #e6e9ed;
	-webkit-box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.11);
	-moz-box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.11);
	box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.11);
	-o-box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.11);
	padding: 10px;
	display: none;
}
#directory_dd {
	width:100%;
	height: 40px;
	background: transparent url(../img/dd-bg.png) repeat-x 0 0;
	border: 1px solid #d0d3d6;
	border-radius: 2px;
}
#directory_dd_container a {
	color: #726f65
}
#directory_dd_options {
	border: solid 1px #CCC;
	border-top: none;
	list-style: none;
	box-shadow: 0px 1px 5px #DDD;
	position: absolute;
	z-index: 2000;
	margin: 0;
	padding: 0;
	background: white;
	overflow: auto;
	width: 310px;
	display: none;
}
.dd_option {
	padding: 10px;
	display: block;
	border-bottom: solid 1px #DDD;
	overflow: hidden;
	text-decoration: none;
	color: #333;
	cursor: pointer;
	-webkit-transition: all 0.25s ease-in-out;
	-moz-transition: all 0.25s ease-in-out;
	-o-transition: all 0.25s ease-in-out;
	-ms-transition: all 0.25s ease-in-out;
}
.dd_option:hover {
	background: #F3F3F3;
	color: black;
}
.dd_select:hover, .dd_option:hover {
	text-decoration: none;
}
#directory_dd .dd_select {
	overflow: hidden;
	display: block;
	padding: 10px;
	color: #5c595a;
	font-size: 16px;
	cursor: pointer;
	text-align: left;
	line-height: 20px
}
.dd_pointer {
	width: 0;
	height: 0;
	right: 10px;
	top: 50%;
	margin-top: -3px;
}
.dd_pointer_down {
	border: solid 5px transparent;
	border-top: solid 5px black;
}
.dd_pointer_up{
	border: solid 5px transparent !important;
	border-bottom: solid 5px black !important;
	margin-top: -8px;
}
.selection_decline {
	display: none;
}
.selection_cancel {
	width: 45px;
	float: left;
	height: 16px;
	margin-right: 5px;
	line-height: 16px;
	color: #ff0000;
}
.selection_yes, .selection_no {
	width: 16px;
	height: 16px;
	float: left;
	margin-right: 5px;
	display: none
}
.selection_yes {
	background: url(../img/icon-tick.png) no-repeat 50% 50%;
}
.selection_no {
	background: url(../img/icon-cross.png) no-repeat 50% 50%;
}